{
  "name": "new-personal-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "scss": "node-sass -w src/styles/scss/ -o src/styles/css/",
    "clean": "rm -rf ./build",
    "clean-build": "npm run clean && npm run build",
    "sync-bucket": "aws s3 sync ./build s3://new-jrwm3-site --acl public-read",
    "add-index": "aws s3 cp ./build/index.html s3://new-jrwm3-site/index.html --metadata-directive REPLACE --cache-control max-age=0,no-cache,no-store,must-revalidate --acl public-read",
    "clean-buckets": "aws s3 rm s3://new-jrwm3-site --recursive --exclude '*' --include 'static/**/*' --include 'precache-manifest.*'",
    "deploy-to-s3": "npm run clean-build && npm run clean-buckets && npm run update-s3-buckets"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
